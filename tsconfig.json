{
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.astro",
  ],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "types": ["node", "express"],
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@UI/*": ["src/UI/*"]
    }
    
  }
}